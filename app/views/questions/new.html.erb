<%= link_to '戻る', questions_path %>
<div class='questions-form'>
<%= form_with model: @question, url: questions_path, local: true do |f| %>
  <div>
    <div class='form-header'>
    質問
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">タイトル</label>
      </div>
      <%= f.text_field :title, class: 'input-default', id: 'question-title' %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">内容</label>
      </div>
      <%= f.text_area :text, class: 'input-default', id: 'question-text' %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">回答できるユーザーを絞り込む</label>
      </div>
      <%= f.collection_select(:type_id, Type.all, :id, :name, {}, {class:"type-select"})%>
      ※選択しなければ全てのユーザーに回答を求めます
    </div>
    <div class='register-btn'>
    <%= f.submit '質問を投稿' %>
    </div>
  </div>
<% end%>
</div>

